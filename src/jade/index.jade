doctype html
html(ng-app="Roguathia", ng-controller="Root")
  head
    title Roguathia
    link(rel="stylesheet", href="css/lib.min.css")
    link(rel="stylesheet", href="css/main.min.css")

  body
    header.navbar.navbar-default
      .container-fluid
        .navbar-header
          a.navbar-brand Roguathia

    .container-fluid(ng-cloak)
      .row.margin-left--30
        .col-md-7
          .row
            .col-md-12#game-area

          .row
            .col-md-12
              div upgrades

        .col-md-5
          uib-tabset(justified="true")
            uib-tab(heading="Party")
              div(ng-controller="Party")
                div(ng-repeat="player in players")
                  div {{player.name}} {{player.xp}}
            uib-tab(heading="Dungeon")
              div dungeon
            uib-tab(heading="Builds")
              div member tmpls
            uib-tab(heading="Achievements")
              div achievements
            uib-tab(heading="Log")
              log
            uib-tab(heading="Options")
              div options

    script(src="js/lib.min.js")
    script(src="js/main.min.js")